@model IEnumerable<Doctor>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Doctors</h4>
           <a class="btn btn-success" asp-action="Create">Create new Doctor</a>
            <div class="table-responsive pt-3">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Job
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>


                        @foreach (var doctor in Model)
                        {
                            <tr>
                                <td>
                                    @count
                                </td>
                                <td>
                                   <img src="~/assets/img/doctors/@doctor.Image" />
                                </td>
                                <td>
                                   @doctor.Name
                                </td>
                                <td>
                                   @doctor.Job
                                </td>
                                <td>
                                   @doctor.Description
                                </td>
                                <td>
                                    <a class="btn btn-warning btn-sm" asp-action="Update" style="color:white;" asp-route-id="@doctor.Id"><i class="mdi mdi-grease-pencil"></i></a>
                                    <a class="btn btn-danger btn-sm" asp-action="Delete" style="color:white;"  asp-route-id="@doctor.Id"><i class="mdi mdi-trash-can"></i></a>
                                </td>
                            </tr>
                            count++;

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

